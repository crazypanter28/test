include /views/mixins/info-result

// Soon
.panel.panel-default( ng-init="outline.showOutlineInfo( 'soon' )" )
    .panel-heading
        .panel-title
            span Clientes por vencer
            .status.soon
    .panel-body

        // Spinner
        .loader-wrapper( ng-if="!outline.soon" )

        // No results
        .no-results( ng-if="outline.soon.length === 0" )
            +noResults("no-data")

        // Search list
        search-list( ng-if="outline.soon.length > 0" typeoperation="soon" employee="{{ binnacle.sadviser.employeeID }}" info="outline.soon" tmpl="binnacle-outline.html" settings="{ count: 5 }" cb="outline.outlineClient" )

